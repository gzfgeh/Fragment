<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_jb">

    <RelativeLayout  
          android:id="@+id/sign_login_div"  
          android:layout_width="fill_parent"  
          android:layout_height="wrap_content"  
          android:padding="15dp"
          android:layout_margin="20dp"
          android:layout_centerInParent="true" 
          android:background="@drawable/login_view">  
          
        <TextView 
			android:id="@+id/sign_user_input"
			android:layout_width="wrap_content"  
			android:layout_height="wrap_content"  
			android:layout_alignParentTop="true"  
			android:layout_marginTop="5dp"  
			android:text="账号"  
			style="@style/normalText"/> 
		<EditText  
			 android:id="@+id/sign_username"  
			 android:layout_width="fill_parent"  
			 android:layout_height="wrap_content"  
			 android:hint="账号"  
			 android:layout_below="@id/sign_user_input"  
			 android:singleLine="true"  
			 android:inputType="text"/>  
        
		
		
		<TextView  
			android:id="@+id/sign_password_input"  
			android:layout_width="wrap_content"  
			android:layout_height="wrap_content"  
			android:layout_below="@id/sign_username"  
			android:layout_marginTop="3dp"  
			android:text="密码" 
			style="@style/normalText"/>  
			
		<EditText  
			android:id="@+id/sign_password"  
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"  
			android:layout_below="@id/sign_password_input" 
			android:hint="6位数字"
			android:singleLine="true"
			android:inputType="numberPassword"/>  
		    
	    <Button  
			android:id="@+id/next_signin_button"  
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"  
			android:text="注册"
			android:textSize="30dp"  
			android:textColor="#0099FF"
			android:layout_below="@id/sign_password"
			android:layout_alignParentRight="true"
			android:onClick="onLoaderClick"/>
		    
		</RelativeLayout>
		
</RelativeLayout>
